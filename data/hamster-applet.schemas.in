<gconfschemafile>
    <schemalist>
        <schema>
            <key>/schemas/apps/hamster-applet/general/keybinding</key>
            <applyto>/apps/hamster-applet/general/keybinding</applyto>
            <owner>hamster-applet</owner>
            <type>string</type>
            <default>&lt;Super&gt;H</default>
            <locale name="C">
                <short>Show window</short>
                <long>Keyboard shortcut for showing the Hamster Applet window.</long>
            </locale>
        </schema>
        <schema>
            <key>/schemas/apps/hamster-applet/general/timeout</key>
            <applyto>/apps/hamster-applet/general/timeout</applyto>
            <owner>hamster-applet</owner>
            <type>int</type>
            <default>30</default>
            <locale name="C">
                <short>Timeout in minutes</short>
                <long>
                    After how many minutes hamster should stop tracking activity
                    when computer is idle. Set to 0 to disable.
                </long>
            </locale>
        </schema>
        <schema>
            <key>/schemas/apps/hamster-applet/general/enable_timeout</key>
            <applyto>/apps/hamster-applet/general/enable_timeout</applyto>
            <owner>hamster-applet</owner>
            <type>bool</type>
            <default>true</default>
            <locale name="C">
                <short>Stop tracking on idle</short>
                <long>
                    Stop tracking current activity, when computer becomes idle
                </long>
            </locale>
        </schema>
        <schema>
            <key>/schemas/apps/hamster-applet/general/stop_on_shutdown</key>
            <applyto>/apps/hamster-applet/general/stop_on_shutdown</applyto>
            <owner>hamster-applet</owner>
            <type>bool</type>
            <default>false</default>
            <locale name="C">
                <short>Stop tracking on shutdown</short>
                <long>
                    Stop tracking current activity on shutdown
                </long>
            </locale>
        </schema>
        <schema>
            <key>/schemas/apps/hamster-applet/general/duration_format</key>
            <applyto>/apps/hamster-applet/general/duration_format</applyto>
            <owner>hamster-applet</owner>
            <type>string</type>
            <default>fixed</default>
            <locale name="C">
                <short>Duration format</short>
                <long>
                    Duration format - choose one of those: "fixed" - 01:31,
                    "symbolic" - 1h31m, "minutes": - 91m
                </long>
            </locale>
        </schema>
        <schema>
            <key>/schemas/apps/hamster-applet/general/panel_appearance</key>
            <applyto>/apps/hamster-applet/general/panel_appearance</applyto>
            <owner>hamster-applet</owner>
            <type>string</type>
            <default>text</default>
            <locale name="C">
                <short>Appearance in panel</short>
                <long>
                    Appearance in panel: "text" - show duration,
                    "icon" - show only icon, "both" - show icon and text
                </long>
            </locale>
        </schema>
    </schemalist>
</gconfschemafile>
